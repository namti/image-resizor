{
  "name": "image-resizor",
  "description": "Effortlessly convert, resize, and compress images (jpg, png, heic, heif, webp) into optimized png and jpg formats, all within the browser environment.",
  "version": "1.1.1",
  "author": "Jasper Yan",
  "license": "ISC",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "watch": "chokidar 'src/**/*' -c 'npm run build'"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/image-resizor.umd.cjs",
  "module": "./dist/image-resizor.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/image-resizor.js",
      "require": "./dist/image-resizor.umd.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "keywords": [
    "photo",
    "picture",
    "image",
    "bitmap",
    "read",
    "load",
    "resize",
    "resizer",
    "crop",
    "heic",
    "heif",
    "jpg",
    "png",
    "webp",
    "convert",
    "compress",
    "crop",
    "width",
    "height",
    "maxWidth",
    "maxHeight",
    "max",
    "size",
    "scale",
    "aspect",
    "ratio",
    "canvas",
    "reduce"
  ],
  "peerDependencies": {
    "heic2any": "^0.0.4"
  },
  "devDependencies": {
    "@types/node": "^20.12.8",
    "@typescript-eslint/eslint-plugin": "^7.8.0",
    "@typescript-eslint/parser": "^7.8.0",
    "chokidar-cli": "^3.0.0",
    "eslint": "^8.57.0",
    "eslint-plugin-jsonc": "^2.15.1",
    "globals": "^15.1.0",
    "pathe": "^1.1.2",
    "sass": "^1.77.0",
    "terser": "^5.31.0",
    "typescript": "^5.2.2",
    "typescript-eslint": "^7.8.0",
    "vite": "^5.2.0",
    "vite-plugin-dts": "^3.9.1"
  }
}
